<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendSMSActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/layoutcornar">

        <TextView
            android:id="@+id/finalTrainname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Train Name"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/finalTraincode"
            android:layout_below="@+id/finalTrainname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Train Code"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btnsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/finalTraincode"
            android:layout_gravity="center"
            android:text="Send"
            android:textAllCaps="false"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:background="@drawable/roundedbutton"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



</RelativeLayout>